---
import { getRelativeLocaleUrl } from "astro:i18n";
import type { AllowedLanguage } from "../config";
import DebugLink from "./DebugLink.astro";

const routes = [
	{
		path: "/",
		text: {
			en: "Home",
			es: "Inicio",
			fr: "Accueil",
		},
	},
	{
		path: "/about",
		text: {
			en: "About",
			es: "Acerca",
			fr: "Ã€ propos",
		},
	},
	{
		path: "/contact",
		text: {
			en: "Contact",
			es: "Contacto",
			fr: "Contact",
		},
	},
	{
		path: "/blog",
		text: {
			en: "Blog",
			es: "Blog",
			fr: "Blog",
		},
	},
];

interface Props {
	lang: AllowedLanguage;
}
const { lang } = Astro.props;
---

<header>
	<nav>
		<ul>
			{
				routes.map((route) => (
					<li>
						<DebugLink href={getRelativeLocaleUrl(lang, route.path)}>
							{route.text[lang]}
						</DebugLink>
					</li>
				))
			}
		</ul>
	</nav>
</header>
